<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:text="TextView:"
      />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF"
        android:gravity="right|center_vertical"
        android:minHeight="@dimen/param_item_min_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/param_edit_text_padding_left"
        android:paddingEnd="7dp">

        <ImageView
            android:id="@+id/image_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_upload_image_grey"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:id="@+id/error_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/error_light"
        android:textSize="@dimen/error_label_text_size"
        android:visibility="gone"
        tools:text="@string/action_parameter_mandatory_error"
        tools:visibility="visible" />
</LinearLayout>
